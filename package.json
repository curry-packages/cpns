{
    "name": "cpns",
    "version": "3.0.0",
    "author": "Michael Hanus <mh@informatik.uni-kiel.de>",
    "synopsis": "Curry port name server and sockets with symbolic names",
    "category": [ "Network" ],
    "license": "BSD-3-Clause",
    "licenseFile": "LICENSE",
    "dependencies": {
        "base"     : ">= 3.0.0, < 4.0.0",
        "directory": ">= 3.0.0, < 4.0.0",
        "filepath" : ">= 3.0.0, < 4.0.0",
        "profiling": ">= 3.0.0, < 4.0.0",
        "process"  : ">= 3.0.0, < 4.0.0",
        "socket"   : ">= 3.0.0, < 4.0.0",
        "time"     : ">= 3.0.0, < 4.0.0"
    },
    "configModule": "Network.CPNS.ConfigPackage",
    "exportedModules": [ "Network.CPNS", "Network.NamedSocket" ],
    "executable": {
        "name": "curry-cpnsd",
        "main": "Network.CPNSD",
        "options": { "kics2" : ":set rts -T" }
    },
    "source": {
      "git": "https://github.com/curry-packages/cpns.git",
      "tag": "$version"
    }
}
